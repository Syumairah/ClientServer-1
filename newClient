#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <sys/socket.h>
#include <sys/types.h>
#include <netinet/in.h>
#include <arpa/inet.h>
#include <unistd.h>

#define PORT 3000

void main(){
	
	int SocketClient , n=0;
	int sock = 0, valread;
	struct sockaddr_in serverAddr;
	char buffer[1024];
	char *hello = "Hello";

	SocketClient = socket(PF_INET, SOCK_STREAM, 0);
	printf(" Client Socket has successfully created.");

	memset(&serverAddr, '\0', sizeof(serverAddr));
	serverAddr.sin_family = AF_INET;
	serverAddr.sin_port = htons(PORT);
	serverAddr.sin_addr.s_addr = inet_addr("192.168.31.132");
        
	if connect(SocketClient, (struct sockaddr*)&serverAddr, sizeof(serverAddr)) < 0 );
	{
	   printf("Connect to server");
	   return 1;
	}
	

	while ((n = recv(SocketClient, buffer, 1024, -1)) > 0)
	{
	  buffer[n] = 0;
	  if(fputs(buffer, stdout) == EOF)
	  {
	  printf("Error : fputs error");
	  }
	}
	
	if(n < 0)
	{
	  printf("Read error");
	}
	
	return 0;
	
}
